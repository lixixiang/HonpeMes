<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/re_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_job_num"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:gravity="center"
            android:text="3041"
            android:textStyle="bold"
            app:rv_backgroundColor="@color/green_alpha"
            app:rv_cornerRadius="@dimen/_30dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="@dimen/_16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/_80dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_16sp"
                            android:textStyle="bold"
                            tools:text="牛备" />

                        <ImageView
                            android:id="@+id/iv_sex"
                            android:layout_width="@dimen/_16dp"
                            android:layout_height="@dimen/_16dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_male" />
                    </LinearLayout>



                    <TextView
                        android:id="@+id/tv_work_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10dp"
                        android:fontFamily="@font/sanfrancisco_medium"
                        android:text="3年工龄"
                        android:textSize="@dimen/_14sp" />

                    <TextView
                        android:id="@+id/tv_work_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5dp"
                        android:fontFamily="@font/sanfrancisco_medium"
                        android:text="2019.04.20"
                        android:textSize="@dimen/_12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_xueli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/grey_l"
                    android:textSize="@dimen/_12sp"
                    android:textStyle="bold"
                    tools:text="高中" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sanfrancisco_medium"
                        android:text="品质组长"
                        android:textSize="@dimen/_14sp" />

                    <TextView
                        android:id="@+id/tv_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5dp"
                        android:fontFamily="@font/sanfrancisco_medium"
                        android:text="2019.04.20"
                        android:textSize="@dimen/_12sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5dp"
                    android:textColor="@color/grey_l"
                    android:textSize="@dimen/_12sp"
                    android:textStyle="bold"
                    tools:text="ddd" />


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>

