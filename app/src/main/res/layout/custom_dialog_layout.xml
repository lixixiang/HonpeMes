<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/_150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:rv_backgroundColor="@color/white"
    app:rv_cornerRadius="@dimen/_30dp">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_60dp"
        android:padding="@dimen/_10dp"
        android:gravity="center"
        android:text="内容区域"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/grey_l_l_l_l"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/_10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/red_l_l"
            android:textStyle="bold"
            android:text="取消"/>

        <View
            android:layout_width="@dimen/_1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_l_l_l_l"/>
        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/_10dp"
            android:textColor="@color/blue_l_l"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"/>


    </LinearLayout>


</com.flyco.roundview.RoundLinearLayout>