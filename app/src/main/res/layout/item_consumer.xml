                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                tools:text="2019-07-18" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_type4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            tools:text="test"/>



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_type"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_title5"
                style="@style/wrap_font_family_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客诉单号："
                android:textColor="@color/grey_l"
                android:textSize="@dimen/_16sp" />


            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_content5"
                style="@style/wrap_font_family_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                tools:text="2019-07-18" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_type5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            tools:text="test"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_type"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_title6"
                style="@style/wrap_font_family_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户名称："
                android:textColor="@color/grey_l"
                android:textSize="@dimen/_16sp" />


            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_content6"
                style="@style/wrap_font_family_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                tools:text="2019-07-18" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_type6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
