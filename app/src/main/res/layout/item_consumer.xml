<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:rv_backgroundColor="@color/white"
    app:rv_cornerRadius="@dimen/_8dp"
    android:padding="@dimen/_10dp"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_marginStart="@dimen/_10dp"
    android:layout_marginEnd="@dimen/_10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_right_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/iv_director"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_title1"
                style="@style/wrap_font_family_body"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="生产单号："
                android:textColor="@color/grey_l"
                android:textSize="@dimen/_16sp" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/wrap_font_family_body"
                android:textColor="@color/grey_l"
                android:textSize="@dimen/_16sp"
                android:text="产品名称："/>

        </LinearLayout>


        <ImageView
            android:id="@+id/iv_director"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_right_grey_24"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_type"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_title2"
                style="@style/wrap_font_family_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品名称："
                android:textColor="@color/grey_l"
                android:textSize="@dimen/_16sp" />


            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_content2"
                style="@style/wrap_font_family_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                tools:text="2019-07-18" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            tools:text="test"/>



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_type"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_title3"
                style="@style/wrap_font_family_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投诉问题："
                android:textColor="@color/grey_l"
                android:textSize="@dimen/_16sp" />


            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_content3"
                style="@style/wrap_font_family_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp"
                tools:text="2019-07-18" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            tools:text="test"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_type"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_title4"
                style="@style/wrap_font_family_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客诉要求："
                android:textColor="@color/grey_l"
                android:textSize="@dimen/_16sp" />


            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_content4"
