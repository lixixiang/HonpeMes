<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10dp"
    android:orientation="vertical"
    android:padding="@dimen/_10dp"
    app:rv_backgroundColor="@color/white"
    app:rv_cornerRadius="@dimen/_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_1"
            style="@style/defaultFont"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/item_1_1"
            style="@style/defaultFont"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp">

        <TextView
            android:id="@+id/item_2"
            style="@style/defaultFont"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/item_2_1"
            style="@style/defaultFont"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp">

        <TextView
            android:id="@+id/item_3"
            style="@style/defaultFont"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/item_3_1"
            style="@style/defaultFont"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</com.flyco.roundview.RoundLinearLayout>