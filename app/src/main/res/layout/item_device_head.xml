<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/_10dp">

    <LinearLayout
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_current_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10dp"
            android:text="剩余"
            android:textColor="@color/grey_l"
            android:textStyle="bold"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/tv_wait_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pingfangsc_medium"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/red_l"
            android:textSize="@dimen/_22sp"
            android:textStyle="bold" />

        <!--        <LinearLayout-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="@dimen/_5dp"-->
        <!--            android:orientation="horizontal">-->

        <!--            <TextView-->
        <!--                android:id="@+id/tv_current_num"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:text=""-->
        <!--                android:textSize="@dimen/_12sp"-->
        <!--                android:layout_marginEnd="@dimen/_10dp"-->
        <!--                android:textColor="@color/red_l" />-->

        <!--            <TextView-->
        <!--                android:id="@+id/tv_rate"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:text="4.2%"-->
        <!--                android:textSize="@dimen/_12sp"-->
        <!--                android:textColor="@color/red_l" />-->

        <!--        </LinearLayout>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/_5dp"
        android:paddingEnd="@dimen/_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主轴转速"
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tv_speed_top"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:singleLine="true"
                android:text="--"
                android:fontFamily="@font/pingfangsc_medium"
                android:textColor="@color/black_l"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切削速度"
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tv_speed_mid"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:singleLine="true"
                android:text="--"
                android:fontFamily="@font/pingfangsc_medium"
                android:textColor="@color/black_l"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机器行程"
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tv_speed_down"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:singleLine="true"
                android:text="--"
                android:fontFamily="@font/pingfangsc_medium"
                android:textColor="@color/black_l"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10dp"
        android:paddingEnd="@dimen/_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="使用部门："
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tv_depart"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="--"
                android:fontFamily="@font/pingfangsc_medium"
                android:textColor="@color/black_l"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="制作组别："
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tv_team"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="--"

                android:fontFamily="@font/pingfangsc_medium"
                android:textColor="@color/black_l"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/operator"
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tv_operator"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="--"
                android:fontFamily="@font/pingfangsc_medium"
                android:textColor="@color/black_l"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间："
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/pingfangsc_medium"
                android:gravity="start"
                android:text="--"
                android:textColor="@color/black_l"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态："
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tv_current_status"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="--"
                android:fontFamily="@font/pingfangsc_medium"
                android:textColor="@color/black_l"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型："
                android:textSize="@dimen/_12sp" />

            <TextView
                android:id="@+id/tv_current_type"
                android:layout_width="@dimen/_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="--"
                android:fontFamily="@font/pingfangsc_medium"
                android:textColor="@color/black_l"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>