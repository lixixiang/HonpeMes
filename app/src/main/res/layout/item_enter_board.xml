<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/_1dp"
    android:paddingStart="@dimen/_8dp"
    android:paddingEnd="@dimen/_8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/sanfrancisco_medium"
        android:textSize="@dimen/_12sp"
        android:textColor="@color/black_l"
        android:layout_weight="1"
        android:gravity="center_vertical"
        tools:title="test"/>

    <TextView
        android:id="@+id/tv_item2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/sanfrancisco_medium"
        android:textSize="@dimen/_12sp"
        android:textColor="@color/black_l"
        android:layout_weight="1.5"
        android:gravity="center_vertical"
        tools:title="test"/>

    <TextView
        android:id="@+id/tv_item3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/sanfrancisco_medium"
        android:textSize="@dimen/_12sp"
        android:textColor="@color/black_l"
        android:layout_weight="1"
        android:gravity="center_vertical"
        tools:title="test"/>

    <TextView
        android:id="@+id/tv_item4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/sanfrancisco_medium"
        android:textSize="@dimen/_12sp"
        android:textColor="@color/black_l"
        android:layout_weight="1"
        android:gravity="center_vertical"
        tools:title="test"/>

    <TextView
        android:id="@+id/tv_item5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/sanfrancisco_medium"
        android:textSize="@dimen/_12sp"
        android:textColor="@color/black_l"
        android:layout_weight="1"
        android:gravity="center_vertical"
        tools:title="test"/>


    <ImageView
        android:id="@+id/iv_selector"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:visibility="invisible"
        android:src="@drawable/ic_grey_arrow_down_24"/>
</LinearLayout>