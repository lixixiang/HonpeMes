<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/_10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品："
            android:textSize="@dimen/_12sp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/tv_item2"
            android:textColor="@color/black_l" />

        <TextView
            android:id="@+id/tv_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入库数："
            android:textSize="@dimen/_12sp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black_l" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品："
            android:textSize="@dimen/_12sp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/tv_item4"
            android:textColor="@color/black_l" />

        <TextView
            android:id="@+id/tv_item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入库数："
            android:textSize="@dimen/_12sp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black_l" />

    </RelativeLayout>

    <View
        android:id="@+id/bg_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_l_l_l_l"/>




</androidx.appcompat.widget.LinearLayoutCompat>





















