<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_10dp"
    android:paddingEnd="@dimen/_10dp"
    android:layout_marginBottom="@dimen/_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_process_record_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/_45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_1"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_12sp"
            android:fontFamily="@font/pingfangsc_medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:id="@+id/item_2"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/_12sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:id="@+id/item_3"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/_12sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text=""/>


        <TextView
            android:id="@+id/item_4"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/_12sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:id="@+id/item_5"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="@dimen/_12sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:id="@+id/item_6"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/_12sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text=""/>

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:src="@drawable/ic_right_grey_24"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_process_record_bg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/_45dp"
        android:layout_marginTop="@dimen/_1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_1_2"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_12sp"
            android:fontFamily="@font/pingfangsc_medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text=""/>

        <TextView
            android:id="@+id/item_2_2"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
