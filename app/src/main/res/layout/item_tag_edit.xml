<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:padding="@dimen/_10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生产信息"
        android:textSize="@dimen/_12sp"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/_16dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35dp"
        android:paddingStart="@dimen/_10dp"
        tools:hint="fdddd"
        android:gravity="center"
        android:paddingTop="@dimen/_3dp"
        android:paddingBottom="@dimen/_3dp"
        android:textColorHint="@color/grey_l_l_l"
        android:textColor="@color/black_l"
        android:textCursorDrawable="@drawable/color_cursor_black"
        android:background="@drawable/shape_radio_thin_grey"/>

</LinearLayout>