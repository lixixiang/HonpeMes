<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:padding="@dimen/_16dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生产信息"
        android:textSize="@dimen/_14sp"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/_16dp"
        android:textColor="@color/black"/>

    <com.flyco.roundview.RoundTextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:paddingStart="@dimen/_10dp"
        android:fontFamily="@font/pingfangsc_medium"
        tools:text="fdddd"
        android:gravity="center"
        android:textColor="@color/black_l"
        android:textSize="@dimen/_14sp"
        android:textStyle="bold"
        android:textCursorDrawable="@drawable/color_cursor_black"
        app:rv_backgroundColor="@color/white"
        app:rv_strokeWidth="@dimen/_1dp"
        app:rv_cornerRadius="@dimen/_4dp"
        app:rv_strokeColor="@color/grey_l_l_l"/>

</LinearLayout>