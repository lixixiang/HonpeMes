<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_35dp"
    android:background="@color/grey_l_l_l"
    android:layout_marginBottom="@dimen/_05dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_0"
        android:layout_width="@dimen/_60dp"
        android:layout_height="@dimen/_35dp"
        android:gravity="center"
        tools:text="日期"
        android:background="@color/white"
        android:fontFamily="@font/pingfangsc_medium"
        android:textColor="@color/grey_l_l"
        android:layout_marginStart="@dimen/_05dp"
        android:layout_marginEnd="@dimen/_05dp"
        android:textSize="@dimen/_12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="@dimen/_55dp"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:text="运行"
        android:background="@color/white"
        android:layout_marginEnd="@dimen/_05dp"
        android:fontFamily="@font/pingfangsc_medium"
        android:textColor="@color/grey_l_l"
        android:textSize="@dimen/_12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="暂停"
        android:background="@color/white"
        android:layout_marginEnd="@dimen/_05dp"
        android:fontFamily="@font/pingfangsc_medium"
        android:textColor="@color/grey_l_l"
        android:textSize="@dimen/_12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="故障"
        android:background="@color/white"
        android:layout_marginEnd="@dimen/_05dp"
        android:fontFamily="@font/pingfangsc_medium"
        android:textColor="@color/grey_l_l"
        android:textSize="@dimen/_12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="故障"
        android:background="@color/white"
        android:layout_marginEnd="@dimen/_05dp"
        android:fontFamily="@font/pingfangsc_medium"
        android:textColor="@color/grey_l_l"
        android:textSize="@dimen/_12sp"
        android:textStyle="bold" />

</LinearLayout>