<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/re_un_login"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:rv_cornerRadius="@dimen/_8dp"
    app:rv_backgroundColor="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_head"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_16dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/ll_un_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10dp"
        android:visibility="gone"
        android:layout_toEndOf="@+id/image_head"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="20sp" />




    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_login_with_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_toEndOf="@+id/image_head"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_login_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_mod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_16dp"
                app:rv_backgroundColor="@color/grey_alpha2"
                app:rv_backgroundPressColor="@color/grey_alpha3"
                app:rv_cornerRadius="@dimen/_20dp"
                android:paddingStart="@dimen/_8dp"
                android:paddingEnd="@dimen/_8dp"
                android:paddingTop="@dimen/_3dp"
                android:paddingBottom="@dimen/_3dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/_12sp"
                android:textColor="@color/grey_l"
                android:text="修改资料"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_job_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工号"
            android:layout_marginTop="@dimen/_2dp"
            android:textSize="@dimen/_12sp"
            android:textColor="@color/grey_l" />

        <TextView
            android:id="@+id/tv_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2dp"
            android:text="岗位"
            android:textSize="@dimen/_12sp"
            android:textColor="@color/grey_l" />

    </LinearLayout>



</com.flyco.roundview.RoundRelativeLayout>