<?xml version="1.0" encoding="utf-8"?>
<com.example.honpemes.widget.HorizonScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rightTitleHorscrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_item0"
            style="@style/TextViewStyleLeft"
            android:text="制作组别" />
        <TextView
            android:id="@+id/tv_item1"
            style="@style/TextViewStyleRight"
            android:text="订单数量" />

        <TextView
            android:id="@+id/tv_item2"
            style="@style/TextViewStyleRight"
            android:text="完成数量" />

        <TextView
            android:id="@+id/tv_item3"
            style="@style/TextViewStyleRight"
            android:text="完成率" />

        <TextView
            android:id="@+id/tv_item4"
            style="@style/TextViewStyleRight"
            android:text="延期数量" />

        <TextView
            android:id="@+id/tv_item5"
            style="@style/TextViewStyleRight"
            android:text="延期率" />

        <TextView
            android:id="@+id/tv_item6"
            style="@style/TextViewStyleRight"
            android:text="报废数量" />

        <TextView
            android:id="@+id/tv_item7"
            style="@style/TextViewStyleRight"
            android:text="报废率" />
    </LinearLayout>

</com.example.honpemes.widget.HorizonScrollView>