<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MultiWaveHeader">
        <attr name="mwhWaveHeight" format="dimension"/>
        <attr name="mwhStartColor" format="color"/>
        <attr name="mwhCloseColor" format="color"/>
        <attr name="mwhIsRunning" format="boolean"/>
        <attr name="mwhEnableFullScreen" format="boolean"/>
        <attr name="mwhColorAlpha" format="fraction|float"/>
        <attr name="mwhProgress" format="fraction|float"/>
        <attr name="mwhVelocity" format="fraction|float"/>
        <attr name="mwhGradientAngle" format="integer"/>
        <attr name="mwhCornerRadius" format="dimension"/>
        <attr name="mwhWaves"/>
        <attr name="mwhShape"/>
    </declare-styleable>
    <declare-styleable name="pickerview">
        <attr name="wheelview_gravity">
            <enum name="center" value="17"/>
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="wheelview_textSize" format="dimension"/>
        <attr name="wheelview_textColorOut" format="color"/>
        <attr name="wheelview_textColorCenter" format="color"/>
        <attr name="wheelview_dividerColor" format="color"/>
        <attr name="wheelview_dividerWidth" format="dimension"/>
        <attr name="wheelview_lineSpacingMultiplier" format="float"/>
    </declare-styleable>
    <declare-styleable name="NumberProgressBar">
        <attr name="progress_reached_color" format="color"/>
        <attr name="progress_unreached_color" format="color"/>
        <attr name="progress_text_color" format="color"/>
        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_reached_bar_height" format="dimension"/>
        <attr name="progress_unreached_bar_height" format="dimension"/>
        <attr name="progress_text_offset" format="dimension"/>
        <attr name="progress_text_visibility" format="integer"/>
        <attr name="progress_current" format="integer" />
        <attr name="progress_max" format="integer"/>
    </declare-styleable>

    <attr name="mwhWaves" format="string|enum">
        <enum name="MultiWave" value="-1"/>
        <enum name="PairWave" value="-2"/>
    </attr>
    <attr name="mwhShape" format="enum">
        <enum name="Rect" value="0"/>
        <enum name="RoundRect" value="1"/>
        <enum name="Oval" value="2"/>
    </attr>
    <attr name="cpSectionBackground" format="reference" />
    <attr name="cpSectionHeight" format="reference"/>
    <attr name="cpSectionTextSize" format="reference" />
    <attr name="cpSectionTextColor" format="reference" />
</resources>